+/* asynchronous */
+
+function get_sysinfo_async(rowelemset) {
+    if (!rowelemset.length)
+        return;
+
+    var submit = $( 'input[type="submit"]', rowelemset[0].parentElement.parentElement );
+    if (submit)
+            submit.attr('disabled', 'disabled');
+    var out_data = {};
+    rowelemset.each(function(index) {
+        var hostname, port;
+        /* riccihostX, nodeX_riccihost, hostnameX, nodeXhost */
+        hostname = $( 'input[name^="riccihost"],'
+                      + 'input[name$="riccihost"]', this );
+        hostname = hostname.length
+                   ? hostname
+                   : $( 'input[name^="hostname"],'
+                        + 'input[name$="host"]', this );
+        hostname = hostname.attr("value");
+        /* portX */
+        port = $( 'input[name^="port"]', this ).attr("value");
+
+        out_data[index] = hostname + '@' + port;
+    });
+
+    $.post('/async/get_system_info', out_data, function (in_data) {
+        rowelemset.each(function(index) {
+            var colspan = $( "td", this ).length;
+            var sysinfo = $(this).next( 'tr.systeminfo' );
+            var content = '';
+            var pairindex = $(this).attr('id').match(/\d+$/)[0];
+
+            if (in_data[index]['errors']) {
+                if (out_data[index].lastIndexOf('@', 0) === 0) {
+                    if (sysinfo.length) {
+                        sysinfo.click();
+                    }
+                    return true;
+                }
