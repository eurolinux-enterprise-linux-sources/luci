+            } else {
+                var digest = in_data['__digest__'] || '(undefined)';
+                var seps = [];
+                var val;
+                switch (digest) {
+                    /* put the break indices in reverse order */
+                    case 'sha256': seps.push(48); break;
+                }
+                content = in_data[index]['fp'];
+                $.each(seps, function(i, val) {
+                    content = content.substring(0, val)
+                              + '<br/><span onclick="event.stopPropagation();">'
+                              + content.substring(val) + '</span>';
+                });
+                val = (seps.length) ? seps[seps.length - 1] : content.length;
+                content = '<span onclick="event.stopPropagation();"><em>' + digest
+                          + ' certificate fingerprint</em>:</span><br/>'
+                          + '<span onclick="event.stopPropagation();">'
+                          + content.substring(0, val)
+                          + '</span>' + content.substring(val);
+            }
+            sysinfo = sysinfo.length
+                    ? sysinfo
+                    : $( '<tr class="systeminfo"'
+                        + ' id="systeminfo_row_elem' + pairindex + '"'
+                        + ' onclick="$(this).fadeOut(complete=function() {$(this).remove();});">'
+                        + '<td colspan="' + colspan + '">'
+                        + '<div class="systeminfo_frame silver"/></td></tr>' )
+                      .insertAfter(this);
+            $( "div.systeminfo_frame", sysinfo[0] ).hide()
+                                                   .html(content).fadeIn();
+        });
+    }, 'json');
+}
